                    <!--</children>-->
                    <children>
                        <Label text="查询码"/>
                        <TextField fx:id="identity" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    </children>
                    <padding>
                        <Insets left="30.0" right="30.0"/>
                    </padding>
                </GridPane>
                <Button mnemonicParsing="false" text="登录" onAction="#login">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <padding>
                        <Insets left="50.0" right="50.0"/>
                    </padding>
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
